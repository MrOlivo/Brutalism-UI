---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/Brutalism-UI/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/Brutalism-UI/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/Brutalism-UI/favicon-16x16.png"
    />
    <link rel="manifest" href="/Brutalism-UI/site.webmanifest" />
    <link rel="icon" type="image/svg+xml" href="/Brutalism-UI/favicon.svg" />
    <link rel="icon" type="image/svg+xml" href="/Brutalism-UI/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="The Brave Dot crafted 5 components with interaction for all Brutalism fans out there. Enjoy!">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: "IBM Plex Mono", monospace;
    background-color: #e5e5e5;
  }
  body {
    margin: 0;
    padding: 0;
  }
</style>
