---
import Star from "../assets/star.png";
---

<div class="rolling-banner">
  <span class="first">This a rolling banner</span>
  <img src={Star} alt="Drawing of a star" />
  <span>This a rolling banner</span>
  <img src={Star} alt="Drawing of a star" />
  <span>This a rolling banner</span>
  <img src={Star} alt="Drawing of a star" />
  <span>This a rolling banner</span>
</div>
<style>
  .rolling-banner {
    padding: 1.75rem 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    animation: bannermove 20s linear infinite;
  }
  @keyframes bannermove {
    from {
      -moz-transform: translateX(100%);
      -webkit-transform: translateX(100%);
      transform: translateX(100%);
    }
    to {
      -moz-transform: translateX(-100%);
      -webkit-transform: translateX(-100%);
      transform: translateX(-100%);
    }
  }
</style>
