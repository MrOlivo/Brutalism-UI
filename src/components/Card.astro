---
export interface Props {
  title: string;
  subtitle: string;
  description: string;
  img: string;
}

const { title, subtitle, description, img } = Astro.props;
---

<div class="link-card">
  <img src={img} alt={description} class="image" />
  <div class="text">
    <h3 class="title">
      {title}
    </h3>
    <p class="subtitle">
      {subtitle}
    </p>
    <hr />
    <p class="description">
      {description}
    </p>
  </div>
</div>
<style>
  h3,
  p {
    margin: 0;
    font-weight: 400;
    font-size: 1rem;
    color: #000000;
  }
  hr {
    margin: 0;
    border: 1px solid #000000;
  }
  .link-card {
    flex: 0 0 400px;
    margin: auto;
  }
  .title {
    padding: 0.5rem;
    text-transform: uppercase;
  }
  .subtitle {
    padding: 0rem 0.5rem 1rem 0.5rem;
  }
  .description {
    text-transform: capitalize;
    padding: 1rem 0.5rem 0.5rem;
  }
  .image {
    width: 100%;
    height: 400px;
    border-radius: 0.25rem;
    object-fit: cover;
    transition: all 200ms ease-in-out;
  }
  .link-card:hover .image {
    box-shadow: 8px 8px #c3ff76;
  }
  .link-card:is(:hover, :focus-within) p,
  .link-card:is(:hover, :focus-within) h3,
  .link-card:is(:hover, :focus-within) hr {
    color: #3322f5;
    border-color: #3322f5;
  }
</style>
